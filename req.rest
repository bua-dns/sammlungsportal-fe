@host = https://sammlungsportal.bua-dns.de

# ----  DIRECTUS API ----

### Get theme contents
GET {{host}}/items/theme_content?limit=-1

### Get background images
GET {{host}}/items/background_images?limit=-1

### Get all collection items
GET {{host}}/items/bua_collections?limit=-1&sort=label&meta=total_count

### Get all collection items with collection files
GET {{host}}/items/bua_collections?fields=*.directus_files_id.*.*&limit=-1&sort=label&meta=total_count

### Get all collection items with dns_taxonomies
GET {{host}}/items/bua_collections?fields=*,dns_taxonomy_subjects.taxonomy_terms_id.label,dns_taxonomy_genre.taxonomy_terms_id.label&limit=-1&sort=label&meta=total_count

### Get all collection items with current fields
GET {{host}}/items/bua_collections?fields=id,label,current_keeper,opening_hours,phone,email,description,homepage,collection_portal,address, other_web_resource,used_in_activity,active_collection,collection_image_main',collection_images.directus_files_id.filename_disk,dns_taxonomy_subjects.taxonomy_terms_id.label,dns_taxonomy_genre.taxonomy_terms_id.label&limit=-1&sort=label&meta=total_count

### Get all collection items ids with dns_taxonomy_subjects
GET {{host}}/items/bua_collections?fields=id,dns_taxonomy_subjects.*.label&limit=-1&sort=label&meta=total_count

### Get collections filtered by current_keeper
GET {{host}}/items/bua_collections?limit=-1&sort=label&filter[current_keeper][_eq]=Freie Universit√§t Berlin

### Get pages
GET {{host}}/items/pages?limit=-1

### Get a page by slug
GET {{host}}/items/pages?filter[slug][_eq]=imprint

### Get homepage
GET {{host}}/items/homepage

### Get homepage with navigation cards
GET {{host}}/items/homepage?fields=*.navigation_cards_id.*.*